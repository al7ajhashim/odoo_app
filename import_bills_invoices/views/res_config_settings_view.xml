<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit Import Option</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='quick_edit_mode']" position="after">
                <h2>Import Option</h2>
                <div class="row mt16 o_settings_container" id="import_option">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_import_bills_invoices_enterprise"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_import_bills_invoices_enterprise"/>
                            <div class="text-muted">
                                Use to import BILLS and INVOICES
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
